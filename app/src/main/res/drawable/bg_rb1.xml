<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <!-- shape如果不声明形状则默认为正方形 -->
        <shape>

            <!-- 圆角，你也可以对不同的角设置不同的数值 -->
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"/>
            <!-- 形状的填充色 -->
            <solid android:color="@color/btn_enabled_false" />
            <!-- 边框宽度和颜色 -->
            <stroke android:width="0.0dp" android:color="@color/btn_enabled_false" />
        </shape>
    </item>

    <item android:state_checked="true">
        <!-- shape如果不声明形状则默认为正方形 -->
        <shape>
            <!-- 圆角，你也可以对不同的角设置不同的数值 -->
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"/>
            <!-- 形状的填充色 -->
            <solid android:color="@color/main_title" />
            <!-- 边框宽度和颜色 -->
            <stroke android:width="0.0dp" android:color="@color/main_title" />
        </shape>
    </item>
    <item>
        <!-- shape如果不声明形状则默认为正方形 -->
        <shape>
            <!-- 圆角，你也可以对不同的角设置不同的数值 -->
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp" />
            <!-- 形状的填充色 -->
            <solid android:color="@color/white" />
            <!-- 边框宽度和颜色 -->
            <stroke android:width="1.0dp" android:color="@color/main_title" />
        </shape>
    </item>

</selector>
