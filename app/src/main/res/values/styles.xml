<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnCommon">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_normal_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="BtnRed" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_red</item>
    </style>

    <style name="BtnBlue" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_blue</item>
    </style>

    <style name="BtnBlueR" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_blue_r</item>
    </style>

    <style name="BtnYellow" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_yellow</item>
    </style>

    <style name="BtnYellowR" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_yellow_r</item>
    </style>

    <style name="Line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
    </style>

    <style name="Line2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:paddingLeft">@dimen/d8</item>
        <item name="android:paddingRight">@dimen/d8</item>
    </style>

    <style name="EtLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d48</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColorHint">@color/tv_hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tv_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/d8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BtnIndex">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_normal_press</item>
    </style>


    <style name="TvLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_light</item>
    </style>


    <style name="TvBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="TvTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/loading_data</item>
    </style>

    <style name="TvIndex">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tv_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/loading_data</item>
        <item name="android:drawablePadding">@dimen/d16</item>
    </style>

    <style name="LayoutIndex">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/tv_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/loading_data</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/d16</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_normal_press_w</item>
    </style>





    <style name="TvDetailsNotif" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_hint</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvDetailsValue" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_dark</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="TvDetailsValueYellow" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_yellow</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="TvDetailsCommen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/d4</item>
        <item name="android:paddingRight">@dimen/d4</item>
    </style>

    <style name="LayoutDetailsH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d48</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_normal_press_w</item>
        <item name="android:paddingLeft">@dimen/d8</item>
        <item name="android:paddingRight">@dimen/d8</item>
    </style>

    <style name="EtNotify">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_normal_press_w</item>
        <item name="android:textColorHint">@color/tv_yellow</item>
        <item name="android:gravity">left|top</item>
        <item name="android:padding">@dimen/d8</item>
        <item name="android:hint">@string/loading_data</item>
        <item name="android:minLines">4</item>
    </style>


    <style name="TvListCommen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/loading_data</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/d4</item>
        <item name="android:paddingRight">@dimen/d4</item>
    </style>

    <style name="TvListDark" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_dark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvListLight" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_light2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvListLight2" parent="TvDetailsCommen">
        <item name="android:textColor">@color/tv_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TvAbout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawableRight">@mipmap/ic_next</item>
        <item name="android:padding">@dimen/d12</item>
        <item name="android:text">@string/loading_data</item>
        <item name="android:textColor">@color/tv_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/d8</item>
        <item name="android:background">@drawable/bg_detail</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TvMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/tv_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EtMatch">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
    </style>

</resources>
